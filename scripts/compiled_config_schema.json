{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Leuko compiled config schema",
    "type": "object",
    "required": [
        "schema_version",
        "general",
        "categories"
    ],
    "definitions": {
        "prop_enabled": {
            "type": "boolean"
        },
        "prop_severity": {
            "type": "string",
            "enum": [
                "info",
                "refactor",
                "convention",
                "warning",
                "error",
                "fatal"
            ]
        },
        "prop_include": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "prop_exclude": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "additionalProperties": false
    },
    "general_common": {
        "type": "object",
        "properties": {
            "enabled": {
                "allOf": [
                    {
                        "$ref": "#/definitions/prop_enabled"
                    },
                    {
                        "default": true
                    }
                ]
            },
            "severity": {
                "allOf": [
                    {
                        "$ref": "#/definitions/prop_severity"
                    },
                    {
                        "default": "convention"
                    }
                ]
            },
            "include": {
                "allOf": [
                    {
                        "$ref": "#/definitions/prop_include"
                    },
                    {
                        "default": []
                    }
                ]
            },
            "exclude": {
                "allOf": [
                    {
                        "$ref": "#/definitions/prop_exclude"
                    },
                    {
                        "default": []
                    }
                ]
            }
        },
        "additionalProperties": false
    },
    "category_common": {
        "type": "object",
        "required": [
            "rules"
        ],
        "properties": {
            "enabled": {
                "allOf": [
                    {
                        "$ref": "#/definitions/prop_enabled"
                    },
                    {
                        "default": true
                    }
                ]
            },
            "severity": {
                "allOf": [
                    {
                        "$ref": "#/definitions/prop_severity"
                    },
                    {
                        "default": "convention"
                    }
                ]
            },
            "include": {
                "allOf": [
                    {
                        "$ref": "#/definitions/prop_include"
                    },
                    {
                        "default": []
                    }
                ]
            },
            "exclude": {
                "allOf": [
                    {
                        "$ref": "#/definitions/prop_exclude"
                    },
                    {
                        "default": []
                    }
                ]
            }
        },
        "additionalProperties": false
    },
    "rule_common": {
        "type": "object",
        "required": [
            "enabled"
        ],
        "properties": {
            "enabled": {
                "allOf": [
                    {
                        "$ref": "#/definitions/prop_enabled"
                    },
                    {
                        "default": true
                    }
                ]
            },
            "severity": {
                "allOf": [
                    {
                        "$ref": "#/definitions/prop_severity"
                    },
                    {
                        "default": "convention"
                    }
                ]
            },
            "include": {
                "allOf": [
                    {
                        "$ref": "#/definitions/prop_include"
                    },
                    {
                        "default": []
                    }
                ]
            },
            "exclude": {
                "allOf": [
                    {
                        "$ref": "#/definitions/prop_exclude"
                    },
                    {
                        "default": []
                    }
                ]
            }
        },
        "additionalProperties": true
    },
    "properties": {
        "schema_version": {
            "type": "string",
            "pattern": "^\\d+\\.\\d+\\.\\d+$",
            "examples": [
                "1.0.0",
                "1.2.3"
            ]
        },
        "general": {
            "type": "object",
            "properties": {
                "enabled": {
                    "$ref": "#/definitions/rule_common/properties/enabled"
                },
                "severity": {
                    "$ref": "#/definitions/rule_common/properties/severity"
                },
                "include": {
                    "$ref": "#/definitions/rule_common/properties/include"
                },
                "exclude": {
                    "$ref": "#/definitions/rule_common/properties/exclude"
                }
            },
            "additionalProperties": false
        },
        "categories": {
            "type": "object",
            "properties": {
                "layout": {
                    "$ref": "category_schemas/layout.json"
                }
            },
            "additionalProperties": false
        }
    },
    "additionalProperties": false
}
