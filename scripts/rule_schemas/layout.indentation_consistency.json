{
    "$id": "rule_schemas/layout.indentation_consistency.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Layout.IndentationConsistency",
    "allOf": [
        {
            "$ref": "../compiled_config_schema.json#/definitions/rule_common"
        },
        {
            "type": "object",
            "properties": {
                "enforced_style": {
                    "type": "string",
                    "enum": [
                        "space",
                        "tab"
                    ],
                    "default": "space"
                },
                "indent_width": {
                    "type": "integer",
                    "minimum": 0,
                    "default": 2
                }
            },
            "additionalProperties": false
        }
    ]
}
